<Domain package="com.jupiter.europa.entity.behavior">
    <ActionSet>
        <!-- Actions Declaration-->

        <!-- Walks to a target Coordinate-->
        <Action name="Step">
            <Parameter name="direction" type="DIRECTION"/>
        </Action>

        <!-- Attacks a Specific Entity, which is assumed to be in range -->
        <Action name="BasicAttack">
            <Parameter name="targetID" type="INTEGER"/>
        </Action>
    </ActionSet>
    <SensorSet>
        <!-- Sensors Declaration-->

        <!-- Checks if the Entity is under Direct Control-->
        <Sensor name="Controlled" type="BOOLEAN"/>

        <!-- Checks if the Entity should follow the Controlled  Entity -->
        <Sensor name="Following" type="BOOLEAN"/>
    </SensorSet>
    <GoalSet>
        <!-- Goals Declaration-->
    </GoalSet>
    <EntitySet>
        <!-- Entities Declaration-->
    </EntitySet>
</Domain>
